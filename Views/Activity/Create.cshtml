@model ActivityMaster
@{
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}
<div class="Container">
    <div class="card" style="max-width: 500px;">
        <div class="card-header">
            <label class="card-title ">Activity Master</label>

        </div>
        <form asp-action="Create" asp-controller="Activity">
            <div class="card-body">
                <div class="form-group">
                    <label >Activity</label>                  
                    <input class="form-control" id="NameofActivity" asp-for="NameofActivity" placeholder="Activity.." asp-area="" />
                </div>
                <div class="form-group">
                    <label >Type</label>
                    <select asp-for="ActivityType" id="ActivityType" class="form-control">
                        <option value="Select">--Select--</option>
                        <option value="File">File</option>
                        <option value="HBL">HBL</option>
                    </select>
                </div>
                <div class="form-group">
                    <label >Activity</label>
                    
                    <select asp-for="Source" id="Source" class="form-control">
                        <option value="Select">--Select--</option>
                        <option value="Upload">Upload</option>
                        <option value="Adhoc">Adhoc</option>
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="">
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="success-message" id="myMessage" data-message="@successMessage" style="color:green" hidden>
                            @successMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="error-message" id="myMessage" data-message="@errorMessage" style="color:red" hidden>
                            @errorMessage
                        </div>
                    }
                </div>
            </div>
        </form>
        
    </div>

</div>
@section Scripts
{
    <script>
    var message = document.getElementById('myMessage').getAttribute('data-message');
         // Output: Hello, world!
        if (message == "Activity is added successfully") {
            
            toastr.success(message);
            setTimeout(function () {
                toastr.clear();
            }, 5000);
        }
        else
        {
           
            toastr.error(message);
            setTimeout(function () {
                toastr.clear();
            }, 5000);
        }
        document.getElementById("NameofActivity").value = "";
        document.getElementById("ActivityType").value = "Select";
        document.getElementById("Source").value = "Select";
       
    </script>
    
}
